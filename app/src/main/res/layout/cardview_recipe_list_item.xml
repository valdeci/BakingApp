<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_default"
    android:layout_marginStart="@dimen/margin_default"
    android:layout_marginEnd="@dimen/margin_default">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_recipe"
            android:layout_width="match_parent"
            android:src="@drawable/cheesecake"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.4"
            android:background="@android:color/background_dark"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_default"
            android:paddingLeft="@dimen/padding_default"
            android:paddingStart="@dimen/padding_default"
            android:paddingTop="@dimen/padding_default"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_title_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorTextCardView"
                android:textSize="@dimen/size_text_title" />

            <TextView
                android:id="@+id/tv_count_serve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="1"
                android:textColor="@color/colorTextCardView"
                android:textSize="@dimen/size_text_plate" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/ic_plate"/>
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>